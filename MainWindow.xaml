<Window x:Class="GridNotes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GridNotes"
        Background="#111"
        Foreground="#EEE"
        WindowStyle="None"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        MaxWidth="880" MaxHeight="800"
                MinWidth="880" MinHeight="800"

        SnapsToDevicePixels="True"
        UseLayoutRounding="True">

    <DockPanel LastChildFill="True">

        <!-- Top bar -->
        <Border DockPanel.Dock="Top" Background="#1A1A1A" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <CheckBox x:Name="StartWithWindowsCheck"
                          Grid.Column="0"
                          Content="Avvia con Windows"
                                        Foreground="#929292"
                          VerticalAlignment="Center"/>

                <ToggleButton x:Name="EditLayoutToggle"
              Grid.Column="2"
              Content="Edit layout"
              
              VerticalAlignment="Center"
              Width="110"
              Height="26"
              Foreground="Black"
              BorderBrush="#333"
              BorderThickness="1">

    <ToggleButton.Style>
        <Style TargetType="ToggleButton">
            <Setter Property="Background" Value="#6e6e6e"/>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="#1A1A1A"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </ToggleButton.Style>
</ToggleButton>
            </Grid>
        </Border>

        <!-- Workspace (NO SCROLL) -->
        <Border Background="#0D0D0D"
                ClipToBounds="True"
                SnapsToDevicePixels="True"
                UseLayoutRounding="True">
            <Canvas x:Name="Board"
                    Background="#0D0D0D"
                    ClipToBounds="True"
                    SnapsToDevicePixels="True"
                    UseLayoutRounding="True"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"/>
        </Border>

    </DockPanel>
</Window>